<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundtt4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/community_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@android:drawable/editbox_background"
        android:hint="@string/community_name" >
    </EditText>

    <EditText
        android:id="@+id/community_description"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_below="@id/community_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@android:drawable/editbox_background"
        android:hint="@string/description" >
    </EditText>

    <EditText
        android:id="@+id/community_add_tags"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/community_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@android:drawable/editbox_background"
        android:hint="@string/add_tags" >
    </EditText>

    <Button
        android:id="@+id/button_create_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/community_add_tags"
        android:background="@drawable/green_button"
        style="@style/ButtonText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/create" />

</RelativeLayout>