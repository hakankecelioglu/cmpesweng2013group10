<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0cfff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/taskTogether"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="TASK TOGETHER" />
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taskTogether"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:text="Create A Task" />

     <EditText
         android:id="@+id/task_name"
         android:layout_width="220dp"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/textView1"
         android:layout_below="@+id/textView1"
         android:layout_marginTop="14dp"
         android:background="@android:drawable/editbox_background"
         android:ems="10"
         android:hint="Task Name" >

         <requestFocus />
     </EditText>

     <EditText
         android:id="@+id/desc"
         android:layout_width="220dp"
         android:layout_height="100dp"
         android:layout_alignLeft="@+id/task_name"
         android:layout_below="@+id/task_name"
         android:background="@android:drawable/editbox_background"
         android:ems="10"
         android:hint="Description" />

     <EditText
         android:id="@+id/deadline"
         android:layout_width="220dp"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/desc"
         android:layout_below="@+id/desc"
         android:background="@android:drawable/editbox_background"
         android:ems="10"
         android:hint="Deadline" />
     
   
     
     <EditText
         android:id="@+id/type"
         android:layout_width="220dp"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/deadline"
         android:layout_below="@+id/type"
         android:layout_marginTop="10dp"
         android:background="@android:drawable/editbox_background"
         android:ems="10"
         android:hint="Add a tag" />

     <Button
         android:id="@+id/button1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignRight="@+id/taskTogether"
         android:layout_marginBottom="14dp"
         android:text="Done" />

     <EditText
         android:id="@+id/type"
         android:layout_width="220dp"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/type"
         android:layout_below="@+id/deadline"
         android:layout_marginTop="14dp"
         android:background="@android:drawable/editbox_background"
         android:ems="10"
         android:hint="Type of need" />

</RelativeLayout>