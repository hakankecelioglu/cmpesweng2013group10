<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0cfff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

   

    <EditText
        android:id="@+id/et_un"
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_un"
        android:layout_alignBottom="@+id/tv_un"
        android:layout_alignLeft="@+id/et_pw"
        android:background="@android:drawable/editbox_background"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_login"
        android:layout_alignLeft="@+id/tv_pw"
        android:layout_below="@+id/et_pw"
        android:layout_toLeftOf="@+id/btn_login"
        android:maxHeight="32dp"
        android:minHeight="32dp"
        android:text="Sign Up" />

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_pw"
        android:layout_alignBottom="@+id/tv_pw"
        android:layout_toRightOf="@+id/tv_un"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:password="true" />

    <TextView
        android:id="@+id/tv_un"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_pw"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:text="User Name:"
        android:textColor="#444444"
        android:textSize="16dp" />
     <TextView
        android:id="@+id/tv_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_un"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="9dip"
        android:layout_marginTop="15dip"
        android:text="Password:"
        android:textColor="#444444"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/et_pw"
        android:layout_below="@+id/et_pw"
        android:minHeight="32dp"
        android:text="Login" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_login"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:clickable="true" >

        </ListView>

    </LinearLayout>

</RelativeLayout>