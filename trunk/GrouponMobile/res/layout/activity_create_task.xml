<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0cfff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/task_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="@string/task_name" >
    </EditText>

    <EditText
        android:id="@+id/task_description"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/task_name"
        android:layout_below="@id/task_name"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="@string/task_description"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/deadline"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/desc"
        android:layout_below="@+id/desc"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="Deadline" />

    <EditText
        android:id="@+id/type"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/deadline"
        android:layout_below="@+id/type"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="Add a tag" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:text="Done" />

    <EditText
        android:id="@+id/type"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/type"
        android:layout_below="@+id/deadline"
        android:layout_marginTop="14dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="Type of need" />

</RelativeLayout>