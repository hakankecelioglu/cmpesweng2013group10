<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	<definition name="grouponTemplate" template="/WEB-INF/views/template/layout.jsp">
		<put-attribute name="htmlHead" value="/WEB-INF/views/common/header.jsp" />
		<put-attribute name="nav" value="/WEB-INF/views/common/navigation.jsp" />
		<!-- <put-attribute name="innerNav" value="/WEB-INF/views/common/innerNavigation.jsp" /> -->
		<put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
	</definition>
	
	<definition name="home.view" extends="grouponTemplate">
		<put-attribute name="title" cascade="true" value="Purposeful Communities" />
		<put-attribute name="body" value="/WEB-INF/views/home.jsp" />
		<put-list-attribute name="cssFiles" cascade="true">
			<add-attribute value="/home.css" />
		</put-list-attribute>
		<put-list-attribute name="jsFiles" cascade="true">
			<add-attribute value="/home.js" />
		</put-list-attribute>
	</definition>
</tiles-definitions>