<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/listview_task_background"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/left_image_view"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/task_icon" />

    <TextView
        android:id="@+id/task_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/left_image_view"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/left_image_view"
        android:layout_marginTop="5dp"
        android:maxLines="4"
        android:text="@string/app_name"
        android:textSize="15sp" />

    <Button
        android:id="@+id/follow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/task_description"
        android:background="@drawable/blue_button"
        android:padding="3dp"
        android:text="@string/task_follow_button"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/task_by"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/task_description"
        android:gravity="right"
        android:maxLines="1"
        android:text="by: sedran"
        android:textSize="12sp" />

</RelativeLayout>